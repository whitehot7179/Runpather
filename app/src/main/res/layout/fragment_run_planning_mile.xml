<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBase"
    tools:context="io.github.ck7179.runpather.RunPlanningMileFragment">

    <TextView
        android:id="@+id/textView_seekbar_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextBlack2"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/seekArc"
        app:layout_constraintLeft_toLeftOf="@+id/seekArc"
        app:layout_constraintRight_toRightOf="@+id/seekArc"
        app:layout_constraintTop_toTopOf="@+id/seekArc"/>

    <TextView
        android:id="@+id/textView_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="11dp"
        android:textColor="@color/colorTextBlack2"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_seekbar_num"
        app:layout_constraintLeft_toRightOf="@+id/textView_seekbar_num"/>

    <com.triggertrap.seekarc.SeekArc
        android:id="@+id/seekArc"
        android:layout_width="280dp"
        android:layout_height="358dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:padding="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rotation="0"
        app:startAngle="0"
        app:sweepAngle="360"
        app:touchInside="true"
        app:arcWidth="5dp"
        app:progressColor="@color/colorPrimaryLight"
        />

    <TextView
        android:id="@+id/textView_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/colorTextBlack2"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/seekArc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekArc"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/btn_kilometer"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/kilometer"
            android:textColor="@color/colorTextBlack3"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/btn_meter"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/meter"
            android:textColor="@color/colorTextBlack3"
            android:textSize="22sp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>

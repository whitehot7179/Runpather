    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/circle_shape"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular_progress_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textview_pg_1_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="2.5"
        android:textColor="@color/colorTextBlack1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar1"
        app:layout_constraintLeft_toLeftOf="@+id/progressBar1"
        app:layout_constraintRight_toRightOf="@+id/progressBar1"
        app:layout_constraintTop_toTopOf="@+id/progressBar1"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:text="KM"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/textview_pg_1_value"
        app:layout_constraintLeft_toRightOf="@+id/textview_pg_1_value"/>

    <TextView
        android:id="@+id/textview_pg1_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="總里程數"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/progressBar1"
        app:layout_constraintRight_toLeftOf="@+id/progressBar2"
        app:layout_constraintTop_toBottomOf="@+id/progressBar1"/>

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/circle_shape"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular_progress_bar"
        app:layout_constraintLeft_toRightOf="@+id/progressBar1"
        app:layout_constraintRight_toLeftOf="@+id/progressBar3"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textview_pg_2_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="3.2"
        android:textColor="@color/colorTextBlack1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar2"
        app:layout_constraintLeft_toLeftOf="@+id/progressBar2"
        app:layout_constraintRight_toRightOf="@+id/progressBar2"
        app:layout_constraintTop_toTopOf="@+id/progressBar2"/>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:text="hr"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textview_pg_2_value"
        app:layout_constraintLeft_toRightOf="@+id/textview_pg_2_value"/>

    <TextView
        android:id="@+id/textview_pg2_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="總路跑時間"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/progressBar2"
        app:layout_constraintRight_toRightOf="@+id/progressBar2"
        app:layout_constraintTop_toBottomOf="@+id/progressBar2"/>

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/circle_shape"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular_progress_bar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textview_pg_3_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="600"
        android:textColor="@color/colorTextBlack1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar3"
        app:layout_constraintLeft_toLeftOf="@+id/progressBar3"
        app:layout_constraintRight_toRightOf="@+id/progressBar3"
        app:layout_constraintTop_toTopOf="@+id/progressBar3"/>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:text="m/周"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/textview_pg_3_value"
        app:layout_constraintLeft_toRightOf="@+id/textview_pg_3_value"/>

    <TextView
        android:id="@+id/textview_pg3_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="運動頻率"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintLeft_toRightOf="@+id/progressBar2"
        app:layout_constraintRight_toRightOf="@+id/progressBar3"
        app:layout_constraintTop_toBottomOf="@+id/progressBar3"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:background="#b0b0b0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_pg2_info"
        android:id="@+id/view5"/>

    <TextView
        android:id="@+id/show_info_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:text="平均路線排名："
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view5"/>

    <TextView
        android:id="@+id/show_info_1_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="27dp"
        android:text="4.2"
        android:textColor="@color/colorTextBlack1"
        android:textSize="32sp"
        app:layout_constraintLeft_toRightOf="@+id/show_info_1"
        app:layout_constraintTop_toBottomOf="@+id/view5"/>

    <TextView
        android:id="@+id/show_info_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="里程數全國排名："
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/show_info_1"
        app:layout_constraintTop_toBottomOf="@+id/show_info_1"/>

    <TextView
        android:id="@+id/show_info_2_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="27dp"
        android:text="167880"
        android:textColor="@color/colorTextBlack1"
        android:textSize="32sp"
        app:layout_constraintLeft_toRightOf="@+id/show_info_2"
        app:layout_constraintTop_toBottomOf="@+id/show_info_1"/>

    <TextView
        android:id="@+id/show_info_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="40dp"
        android:text="路線分享數："
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/show_info_2"
        app:layout_constraintTop_toBottomOf="@+id/show_info_2"/>

    <TextView
        android:id="@+id/show_info_3_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="27dp"
        android:text="5"
        android:textColor="@color/colorTextBlack1"
        android:textSize="32sp"
        app:layout_constraintLeft_toRightOf="@+id/show_info_3"
        app:layout_constraintTop_toBottomOf="@+id/show_info_2"/>

</android.support.constraint.ConstraintLayout>



